<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff582"
    android:orientation="vertical"
    tools:context=".Fragments.RecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipeTxtRecept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:background="#fcf6c1"
            android:text="xy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/recipeLinLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp">

            <Button
                android:id="@+id/recipeBtnDislike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="#ff5454"
                android:text="Dislike"
                android:textColor="#ff0000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/recipeBtnLike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_weight="1"
                android:background="#5eff58"
                android:text="Like"
                android:textColor="#106b00"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>